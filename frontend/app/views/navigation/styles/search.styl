@import 'nib'

.navigation-search
  background-color:#4ab685
  position:absolute
  top:2.5rem
  padding:1em
  z-index:10
  width:100%

  &.open
    display:block

  .search-form /* tmp */
    width:100%
    overflow:hidden

  .search-term
    background-color:#3e8665
    border:none
    outline:none
    border-radius:0.2em
    padding:0.5em
    color:#fff
    font-style:italic
    font-size:1.1rem
    width:94%

  .search-info
    display:none
    color:#3e8665
    font-weight:bold
    font-size:1.2em
    margin-top:0.4em
  
  .search-results
    display:none
    padding-top:1rem
    top:6rem
    left:1rem
    right:1rem
    bottom:1rem
    position:absolute
    border-top:solid #3e8665 2px
    overflow:auto
      
  &.has-results
    bottom:0
    .search-results
      display:block
  
  .tuble-card
    clearfix()
    background:#fff
    color:#000
    margin-bottom:1em
    cursor:pointer

    &:hover
      background-color:#efefef

    a
      color:#000

@media only screen and (min-width: 480px)

  #navigation-active-panel

    position:fixed
    top:0
    left:4.5rem
    height:100%

    .navigation-search
      position:relative
      top:0
      width:22rem
      clearfix()
      height:100%

      .search-results
        clearfix()
        position:relative
        top:0
        left:0


/* High resolution screens ---------- */
@media only screen and (-webkit-min-device-pixel-ratio: 1.5), only screen and (min-device-pixel-ratio: 1.5)

  .navigation-search
    top:100px
