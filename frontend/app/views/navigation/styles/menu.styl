}

/* Desktop view ---------- */
@media only screen and (min-width: 480px)

  #navigation-active-panel
    position:relative
    z-index:999

  #navigation-menu
    width:4.5rem
    top:0
    height:100%

    a
      line-height:4.5rem
      height:4.5rem
      text-align:center
      font-size:1.2rem
      border-bottom:solid #000 1px

      /* skin? bg #000 border #ff0 */
      &.active
        background-color:#000 !important;
        border-left:solid #ff0 0.25rem

    span
      display:none


