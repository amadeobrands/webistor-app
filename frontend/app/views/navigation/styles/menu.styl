
#navigation-menu
  position:absolute
  top:2.5rem
  left:0
  width:100%
  background-color:#25282e
  z-index:10

  a
    line-height:3.2rem
    height:3.2rem
    padding:0 1rem
    font-size:1rem
    text-align:left

    &:hover
    &.active
      background-color:#4ab685

  &.open
    display:block


