@import 'nib'

button-shadow(size, color)
  box-shadow: 0px size 0px 0px color

.btn
  cursor: pointer
  text-decoration: none
  color: #577388
  font-family: 'proxima_novasemibold'
  background: #FFF
  padding: 10px 20px
  border-radius: 2px
  button-shadow: 2px rgba(227,227,227,1)

.buttons
  margin: 0 -10px
  .btn
    margin: 10px

.green.btn
  color: #FFF
  background:#a0d468
  button-shadow: 2px rgba(140,184,93,1)
  
  &:hover
    background:#a9e06e

.blue.btn
  color:#fff;
  background:#599EF0
  button-shadow: 2px #4A85CA
  
  &:hover
    background:#5ea6fc

.btn:active
  box-shadow:none;
  position:relative
  top:2px
