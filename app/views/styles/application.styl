// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

/* ==== RESET ==== */

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed, 
figure, figcaption, footer, header, hgroup, 
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure, 
footer, header, hgroup, menu, nav, section {
  display: block;
}
body {
  line-height: 1;
}
ol, ul {
  list-style: none;
}
blockquote, q {
  quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
  content: '';
  content: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}
input, textarea{
  outline: -webkit-focus-ring-color auto 0px;
}

.clearfix:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}
 
.clearfix {
  display: inline-block;
}
 
html[xmlns] .clearfix {
  display: block;
}
 
* html .clearfix {
  height: 1%;
}



/* ==== GENERAL ==== */

*
  box-sizing: border-box

html,
body
  font-family: 'ProximaNova', 'ProximaNova Regular', 'Lato', sans-serif
  padding: 0
  margin: 0
  font-size: 1em
  background: #fff
  color: #373942
  padding-bottom:35px

body
  min-width:760px

li
  list-style:none
  margin:0
  padding:0
  vertical-align:top

.non-mobile
  display:none

a
  text-decoration: none;
  color:#a5b1b8

#contentbox
  width: 100%

  #left-wrapper
    width:100%
    float:left

    #left
      margin:0 280px 30px 30px
      display:block;

  #right
    position:fixed
    top:80px
    right:0
    bottom:0
    overflow:hidden
    width:250px
    background:#f4f7f8
    border-left: 1px solid #dfe4e6
    display:block

    &:hover
      overflow:auto

      a
        color:#67737a

    a
      color:#a5b1b8

    .app-updates
      display:none
      border-bottom:solid #d4d7df 1px
      margin-bottom:16px

      h1
        font-weight:bold

      ul
        margin:16px 0

/* ==== Forms ==== */

::-webkit-input-placeholder { color:#98a3ab }
::-moz-placeholder { color:#98a3ab } /* firefox 19+ */
:-ms-input-placeholder { color:#98a3ab } /* ie */
input:-moz-placeholder { color:#98a3ab }

.ctrlHolder

  &.has-icon

    &::before
      position:absolute
      left:10px
      top:7px
      color:#b4b8c1
      font-weight: 500;
      font-family:FontAwesome
      display:inline-block
      font-size:0.9rem

    input, textarea
      padding:0 0.5rem 0 33px;

input[type="submit"]
  background: #90d990;
  border: 1px solid  #80c180;
  box-shadow: inset 0 1px 0 0 #afe5af;
  text-shadow: 0 1px #80c180;


/* ==== Tags ==== */

.button, input[type="submit"]
  vertical-align:middle
  padding: 0 10px;
  font-size: 0.85em;
  line-height: 30px;
  height: 30px;
  border-radius: 3px;
  -moz-border-radius: 3px;
  -webkit-border-radius: 3px;
  color: #FFFFFF;
  font-weight:500
  display: inline-block;

.green {
  background: #90d990;
  border: 1px solid  #80c180;
  box-shadow: inset 0 1px 0 0 #afe5af;
  text-shadow: 0 1px #80c180;
  &:hover {
    background: #8ad28a;
  }
}

.orange {
  background: #f4a96c;
  border: 1px solid  #c98d5b;
  box-shadow: inset 0 1px 0 0 #f0ba8e;
  text-shadow: 0 1px #c98d5b;
  &:hover {
    background: #eaa268;
  }
}

.blue {
  background: #6cb5f4;
  border: 1px solid  #5e9ed5;
  box-shadow: inset 0 1px 0 0 #85c1f6;
  text-shadow: 0 1px #5e9ed5;
  &:hover {
    background: #69b1ee;
  }
}

.red
  background:#ec7963
  border:1px solid #af5a51
  box-shadow:inset 0 1px 0 #f49785
  text-shadow:0 1px #c26356

/* ==== Start style ==== */

html.start
  background:#454751

html.start body
  background:none
  color:#fff

html.start #app-container
  display:none

#start-container

  .top-bar
    height: 10px;
    background:#ec7963;
    margin-bottom:50px
  
  .content-wrapper
    width:1120px;
    margin:auto;

.error-message
  div
    min-width: 360px;
    text-align:center;
    display:inline-block;
    position: relative;
    margin: 0 auto 30px auto;
    padding: 15px 18px;
    text-align: left;
    border-radius: 5px;
    background:rgba(255, 255, 255, 0.2);
    box-shadow: 0 1px 1px rgba(0,0,0,0.1), inset 0 1px 0 rgba(255,255,255,0.6);

@media only screen and (min-width: 480px)
  
  .on-mobile
    display:none !important

  .non-mobile
    display:block

