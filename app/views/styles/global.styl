// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

/* ==== EVERYTHING ==== */

*
  box-sizing: border-box
  font-smoothing: antialiased

/* ==== CLEAFIX ==== */

.clearfix
  display: inline-block

  &:after
    content: "."
    display: block
    clear: both
    visibility: hidden
    line-height: 0
    height: 0

html[xmlns] .clearfix
  display: block

* html .clearfix
  height: 1%

/* ==== CONTAINERS ==== */

html,
body
  width: 100%
  height: 100%
  min-width:760px

/* ==== MOBILE ==== */

.non-mobile
  display:none

@media only screen and (min-width: 480px)

  .on-mobile
    display:none !important

  .non-mobile
    display:block
