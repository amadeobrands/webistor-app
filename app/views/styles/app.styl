// TOOLTIP

.tooltip {
  display: inline;
  position: relative;
}

.tooltip:hover {
  color: #c00;
  text-decoration: none;
}

.tooltip:hover:after {
  // background: #111;
  // background: rgba(0,0,0,.8);
  background:#67737a
  border-radius: 6px;
  bottom: 37px;
  color: #fff;
  content: attr(data-title);
  font-size:0.75rem
  display: block;
  left: 1em;
  padding: 5px 10px;
  position: absolute;
  // text-shadow: 0 1px 0 #000;
  white-space: nowrap;
  z-index: 98;
}

.tooltip:hover:before {
  border: solid;
  // border-color: #111 transparent;
  // border-color: rgba(0,0,0,.8) transparent;
  border-width: 5px 5px 0 5px;
  border-color:#67737a transparent
  bottom: 32px;
  content: "";
  display: block;
  left: 2em;
  position: absolute;
  z-index: 99;
}


