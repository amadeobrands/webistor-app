#nav
  width:100%;
  background-color:#f4f7f8
  margin:0
  padding:0
  height:80px;
  position:fixed
  top:0
  left:0
  z-index:5
  color: #67737a
  border-bottom:solid #dfe4e6 1px

  .menu
    clearfix()

  h1
    margin:0;
    padding: 0;
    float: left;
    display:inline-block;
    width:117px
    height:78px
    border-right: 1px solid  #e5e5e5
    text-indent:-9999px
    background:url(../images/history/logo.png) center center no-repeat

    a
      width: 100%;
      height: 100%;

  a
    color: #67737a
    display:block;

  #search-form
    display:inline-block
    font-family:'ProximaNova Bold', sans-serif
    width:403px

    .ctrlHolder
      position:relative
      margin-left:30px

      &.search::before
        content:"\f002"
        font-size:18px
        padding-top:25px

    input[type="search"]
      margin-left:10px
      font-family:'ProximaNova Bold', sans-serif
      font-weight:400
      height:100%
      width:100%
      padding:30px
      border:none
      font-size:18px
      background:transparent

  .bookmarklet-btn
    cursor:move

  ul
    margin:0
    padding:0
    position:relative
  
    > li
      float:left

    li
      margin:0
      padding:0
      line-height:80px

      a
        padding:0 15px

  #main-nav

    a:hover, a.active
      background:#000;

  #profile-nav
    float:right
    position:absolute
    top:0
    right:0
    
    li
      margin-right:30px
    
    i
      margin-left:13px
    
    .sub-menu
      display:none
      position:absolute
      top:50px
      
      li
        background:#fff
        border:1px solid #ccc
        border-radius:5px
        border-top:none;
        border-top-left-radius:0;
        border-top-right-radius:0;
        line-height:normal
      
      a
        color:#000
        padding:10px
        min-width:100px
        display:inline-block
      
    &:hover .sub-menu
      display:block
    
