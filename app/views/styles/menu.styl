#nav
  width:100%;
  background-color:#f4f7f8
  margin:0
  padding:0
  height:80px;
  position:fixed
  top:0
  left:0
  z-index:5
  color: #67737a
  border-bottom:solid #dfe4e6 1px

  .menu
    clearfix()

  h1
    margin:0;
    padding: 0;
    float: left;
    display:inline-block;
    width:117px
    height:78px
    border-right: 1px solid  #e5e5e5
    text-indent:-9999px
    background:#f4f7f8 url(../images/history/logo.png) center center no-repeat

    a
      width: 100%;
      height: 100%;

  a
    color: #67737a
    display:inline-block;

  #search-form
    display:inline-block
    font-family:'ProximaNova Bold', sans-serif
    top: 0;
    left:118px;
    right:250px;
    position: absolute;

    .ctrlHolder
      position:relative

      &.search::before
        content:"\f002"
        font-size:18px
        padding-top:25px
        padding-left:20px

    input[type="search"]
      font-family:'ProximaNova Bold', sans-serif
      font-weight:400
      height:80px
      width:100%
      padding:30px
      padding-left:70px
      border:none
      font-size:18px
      border-bottom:solid #dfe4e6 1px
      background:transparent
      box-sizing: border-box

    input[type="search"]:focus
      background:#f9fbfc;

  .bookmarklet-btn
    cursor:move

  ul
    margin:0
    padding:0
    position:relative
  
    > li
      float:left

    li
      margin:0
      padding:0
      line-height:80px

      a
        padding:0 15px

  #main-nav

    a:hover, a.active
      background:#000;

  #profile-nav
    position:absolute
    top:0
    right:0
    width:250px
    border-left:solid #dfe4e6 1px
    text-align:right
    
    li
      width:100%
    
    a
      display:block
      padding-right:30px

    i
      margin-left:13px
    
    .sub-menu
      display:none
      position:absolute
      top:50px
      
      li
        background:#fff
        border:1px solid #ccc
        border-radius:5px
        border-top:none;
        border-top-left-radius:0;
        border-top-right-radius:0;
        line-height:normal
      
      a
        color:#000
        padding:10px
        min-width:100px
        display:inline-block
      
    &:hover .sub-menu
      display:block
    
