@import 'nib'

.edit-entry-form
  
  textarea,
  input[type=search],
  input[type=text]
    box-sizing:border-box
    display:block
    width:100%
    height: 50px
    padding: 0 50px 0 20px
    margin-bottom:15px
    font-size: 16px
    color: #7a8499
    border: none
    box-shadow: 0px 1px 0px 0px rgb(227,227,227)
  
  textarea
    height:150px
  
  .buttonHolder
    text-align:right
  
  .btn.save
    margin-left:4px
    border:none
    background:none repeat scroll 0% 0% #599EF0
    box-shadow:0px 2px 0px 0px #4A85CA
  
  .cancel
    color: #aaa
