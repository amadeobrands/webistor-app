.entry
  padding: 15px;
  border-bottom: 1px solid #d4d7df;
  display: block;

  &:nth-child(even)
    background: #f7f7f7;
  
  &:last-child
    border: none;

  &:hover
    background-color:#eee;

  .title
    font-size: 1em;
    
    a
      color: #373942
  
  .url
    margin: 15px 0;
  
  .link
    color: #6cb5f4;
    font-weight: 400;
    font-style: normal;
    text-transform: lowercase;


  .edit-entry-form
    .inner
      padding: 20px;

  .inner
    clear: both;
    width: 100%;
