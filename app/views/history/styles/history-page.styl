.header
  border-bottom: 1px solid #d4d7df
  box-shadow: 1px 3px 5px -3px #d4d7df
  
  h2
    margin: 30px 0 30px 30px
    font-size: 1.125em
    display:inline-block
    line-height: 30px

#actions
  float: right
  margin: 30px 30px 30px 0
  
input[type="search"]
  font-size: 0.750em
  font-weight: 400
  color: #d4d7df
  line-height: 30px
  height: 30px
  border: 1px solid #ccc
  border-radius: 3px
