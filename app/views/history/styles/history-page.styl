@import 'nib'

.history-page

  .header
    clearfix()
    padding-bottom: 30px
    border-bottom:solid #dee5e7 1px
    // height: 30px

    h2
      margin: 0 10px 0 0
      font-size: 20px
      line-height: 30px
      display:inline-block
      font-size:22px
      font-family:'ProximaNova Regular', sans-serif

      &.active
        color:#ec7963

    .js-add-entry
      float:right
      min-width:93px
      position:relative
      margin:-5px 0 0 0

      .fa
        margin-right:3px;

      &.toggled
        span
          display:inline-block

  .entry-list
    margin-top:30px

  .pro-tip
    padding:30px 30px
    background:#a0d468
    border:solid #8cc152 1px
    margin:30px 0 0 0
    color:#fff
    font-size:1.04rem
    display:none

    em
      // font-style:italic
      margin-right:10px

    i
      margin:0 5px

    a
      color:#fff
      font-weight:bold
      border-bottom:solid #fff 1px
      cursor:move

    .dismiss
      border:none
      color:#75a73f
      float:right
      cursor:default

      &:hover
        color:#fff
        cursor:pointer
