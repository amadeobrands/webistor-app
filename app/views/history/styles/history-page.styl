.history-page

  .header
    border-bottom: 1px solid #d4d7df
    box-shadow: 1px 3px 5px -3px #d4d7df
    padding:30px 15px 30px 15px
    
    h2
      margin: 0 10px 0 0
      font-size: 1.125em
      display:inline-block
      line-height:30px

    .js-add-entry
      position:relative
      top:10px
      /*
      transition:width 0.2s ease
      -webkit-transition:width 0.2s ease
      */
      width:96px;
      display:inline-block
      white-space:nowrap
      overflow:hidden/*strange: margin is gone*/

      &.toggled
        width:114px
        /*
        transition:width 0.2s ease
        -webkit-transition:width 0.2s ease
        */

      span
        overflow:hidden

    .fa
      margin-right:3px;

  #actions
    float: right

    input[type="search"]
      padding:0 5px;
      font-size: 0.750em
      font-weight: 400
      height: 28px
      border: 1px solid #ccc
      border-radius: 3px
      -moz-border-radius: 3px
      -webkit-border-radius: 3px
