
<h3 class="title">
  <a href="{{this.url}}" target="_blank">
    {{title}}
  </a>
</h3>

{{#if this.description}}
  <div class="description">
    {{this.description}}
  </div>
{{/if}}

<div class="tags">
  {{#each tags}}
    <a href='#' class="tag">{{title}}</a>
  {{/each}}
</div>

<footer>
  <ul>
    <li class="uri">
      <i class="fa fa-globe"></i>
      <a href="{{this.url}}" target="_blank" class="link">{{this.url}}</a>
    </li>
    <li class="entry-actions">
      <a href="#" class="js-edit">
        <i class="fa fa-pencil"></i>
      </a>
      {{!--
      <a href="#" class="js-delete delete">
        Delete
      </a>
      --}}
    </li>
    <li class="dt-created">
      <i class="fa fa-clock-o"></i>
      {{this.dt_created}}
    </li>
  </ul>
</footer>
