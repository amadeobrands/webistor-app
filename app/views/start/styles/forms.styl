.login-page,
.register-page
  
  h1
    text-align:center
    font-size:2em
    margin:0.5em
  
  p
    text-align:center
  
  .login-form,
  .register-form
    text-align:center
    
    .inner
      padding:15px
    
    label
      display:none
    
    .ctrlHolder,
    .buttonHolder
      margin-bottom:1em
    
    .buttonHolder
      width:320px
      text-align:left
      margin:0 auto 1em
    
    input[type="text"],
    input[type="password"]
      width:320px
      font-size:1.2em
      height:auto
      padding:0.2em 0.3em
    
    input[type="submit"]
      margin-right:1em
    
  .register-form
    .email
      font-weight:bold
      text-align:left
      width:320px
      margin:1em auto
    