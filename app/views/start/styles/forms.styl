.login-page,
.register-page
  
  h1
    text-align:center
    font-size:2em
    margin:0.5em
  
  p
    text-align:center
  
  a
    color:#fff
    text-decoration:underline
    
    &.button
      text-decoration:none
  
  .login-form,
  .register-form
    text-align:center
    
    .inner
      padding:15px
    
    label
      display:none
    
    .ctrlHolder,
    .buttonHolder
      margin-bottom:1em
    
    .buttonHolder
      width:375px
      text-align:right
      margin:0 auto 1em
    
    input[type="text"],
    input[type="password"]
      width:375px
      font-size:1.2em
      height:auto
      padding:0.2em 0.3em
    
    input[type="submit"]
      // margin-right:1em
      
      &.button
        height:40px
        // margin-left:1em
        padding:0 2em
        background: #ec7963;
        font-size: 16px;
        font-family: Lato;
        font-weight: 300;
        border: 1px solid #af5a51;
        box-shadow: inset 0 1px 0 0 #f49785;
        text-shadow: 0 1px #af5a51;
      
      &.red
        background:#ec7963
        border:1px solid #af5a51
        box-shadow:inset 0 1px 0 #f49785
        text-shadow:0 1px #c26356
    
        &:hover
          -webkit-filter: contrast(110%);
          filter: contrast(110%);
          font-weight:500;



  .register-form
    .email
      font-weight:bold
      text-align:left
      width:320px
      margin:1em auto
    