#nav
  width: 100%;
  height: 50px;
  background: #373942;
  color: #FFFFFF;
  margin: 0;
  padding: 0;
  
  a
    color: #FFFFFF
    display:block;
  
  h1
    font-size: 1.125em;
    margin:0 0 0 30px;
    padding: 0;
    font-weight: 400;
    float: left;
    line-height: 50px;
    /*border-right: 1px solid  #2d2f36;*/
    /*box-shadow: inset -1px 0px 0px 0 #444650;*/
    padding-right: 30px;

  .bookmarklet-btn
    cursor:move

  ul
    margin:0
    padding:0
    position:relative
  
    > li
      float:left

    li
      margin:0
      padding:0
      line-height:50px

      a
        padding:0 15px

  #main-nav

    a:hover, a.active
      background:#000;

  #profile-nav
    float:right
    
    li
      margin-right:30px
    
    i
      margin-left:10px
    
    .sub-menu
      display:none
      position:absolute
      top:50px
      
      li
        background:#fff
        border:1px solid #ccc
        border-radius:5px
        border-top:none;
        border-top-left-radius:0;
        border-top-right-radius:0;
        line-height:normal
      
      a
        color:#000
        padding:10px
        min-width:100px
        display:inline-block
      
    &:hover .sub-menu
      display:block
    
