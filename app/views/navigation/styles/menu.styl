
#nav
  width: 100%;
  height: 50px;
  background: #373942;
  color: #FFFFFF;
  margin: 0;
  padding: 0;
  
  a
    color: #FFFFFF
    display:block;
  
  h1
    font-size: 1.125em;
    margin:0 0 0 30px;
    padding: 0;
    font-weight: 400;
    float: left;
    line-height: 50px;
    /*border-right: 1px solid  #2d2f36;*/
    /*box-shadow: inset -1px 0px 0px 0 #444650;*/
    padding-right: 30px;

  .bookmarklet-btn
    cursor:move

  ul
    margin:0
    padding:0
    position:relative
  
    > li
      float:left

    li
      margin:0
      padding:0
      line-height:50px

      a
        padding:0 15px

        &:hover:not(.profile-btn)
          background:#000;

      ul
        display:none

      &:hover
        ul
          position:absolute
          top:50px
          display:block

          li
            background: #373942;
            width:123px


  #profile-nav
    float:right
    
    li
      margin-right:30px
    
    i
      margin-left:10px
    