
#nav
  
  width: 100%;
  height: 50px;
  background: #373942;
  color: #FFFFFF;
  margin: 0;
  padding: 0;
  
  a
    color: #FFFFFF
  
  h1
    font-size: 1.125em;
    margin: 0 30px;
    padding: 0;
    font-weight: 400;
    float: left;
    line-height: 50px;
    border-right: 1px solid  #2d2f36;
    box-shadow: inset -1px 0px 0px 0 #444650;
    padding-right: 30px;
  
  ul
    margin:0
    padding:0
  
  #main-nav li,
  #profile-nav li
    float:left
    margin:0
    padding:0
    line-height:50px
  
  #main-nav li
    margin-left:30px
    
    &:first-child
      margin-left:0
  
  #profile-nav
    float:right
    
    li
      margin-right:30px
    
    i
      margin-left:10px
    

