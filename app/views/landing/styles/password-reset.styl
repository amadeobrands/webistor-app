#password-reset
  
  h2
    font-size:170%
    text-align:center
    margin-bottom:0.5em
  
  h3
    font-size:150%
    text-align:center
  
  p
    text-align:center
    margin-bottom:1em
  
  .persistant
    margin-bottom:1em
  
  .password-reset-form [type="text"], 
  .password-reset-form [type="password"],
  .password-reset-completion-form [type="text"], 
  .password-reset-completion-form [type="password"] {
    width: 390px;
    height: 50px;
    float: left;
    margin-top: 10px;
    margin-bottom: 20px;
    padding: 0 20px;
    border-radius: 2px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border: 1px solid #d9d9d9;
    clear: both;
    font-size: 18px;
    font-weight: 100;
    color: #88a6bc;
  }
  
  .password-reset-form [type="submit"],
  .password-reset-completion-form [type="submit"]{
    border:none;
  }
  
  input.submit{
    width:100%;
    text-align:center;
  }
